<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <settings>
        <setting name="logImpl" value="log4j"/>        
    </settings>
    
    <typeAliases>
        <typeAlias type='proyecto.entities.Recurso' alias='Recurso'/>
        <typeAlias type='proyecto.entities.Posgrado' alias='Posgrado'/>
        <typeAlias type='proyecto.entities.Clase' alias='Clase'/>
        <typeAlias type='proyecto.entities.Materia' alias='Materia'/>
        <typeAlias type='proyecto.entities.Cohorte' alias='Cohorte'/>
        <typeAlias type='proyecto.entities.Asignatura' alias='Asignatura'/>
        <typeAlias type='proyecto.entities.Profesor' alias='Profesor'/>
        <typeAlias type='proyecto.entities.Periodo' alias='Periodo'/>
    </typeAliases>        
    
    
    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC" />
            <dataSource type="POOLED">
                <property name="driver" value="org.h2.Driver" />
                <property name="url" value="jdbc:h2:file:./target/db/testdb;MODE=PostgreSQL" />
                <property name="username" value="anonymous" />
                <property name="password" value="" />
            </dataSource>
        </environment>
    </environments>
        
    <mappers>
        <mapper resource="mappers/RecursoMapper.xml"></mapper>
        <mapper resource="mappers/CohorteMapper.xml"></mapper>  
        <mapper resource="mappers/ClaseMapper.xml"></mapper> 
        <mapper resource="mappers/ProfesorMapper.xml"></mapper>
        <mapper resource="mappers/MateriaMapper.xml"></mapper>  
        <mapper resource="mappers/AsignaturaMapper.xml"></mapper>
        <mapper resource="mappers/PosgradoMapper.xml"></mapper>    
    </mappers> 
        
</configuration>
