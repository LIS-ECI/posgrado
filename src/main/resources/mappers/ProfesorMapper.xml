<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="proyecto.dao.mybatis.mappers.ProfesorMapper">
    
    <select parameterType="map" id="consultarProfesores" resultMap="ProfesorResult">
        SELECT
        
        pro.documento,
        pro.nombre,
        pro.correo,
        pro.telefono,
        pro.tipo_documento
        
	FROM profesor as pro;
    </select>
    
    <select parameterType="map" id="consultarProfesor" resultMap="ProfesorResult">
        SELECT
        
        pro.documento,
        pro.nombre,
        pro.correo,
        pro.telefono,
        pro.tipo_documento
        
	FROM profesor as pro join MateriaCohorte as matc
        on pro.documento = matc.Profesor_documento
        
        WHERE matc.Cohorte_id = #{cohorte} AND
        matc.Materia_sigla LIKE #{materia};
    </select>
    
    <resultMap type="Profesor" id="ProfesorResult">
        <id property='documento' column='documento'/>
        <result property='nombre' column='nombre'/>
        <result property='correo' column='correo'/>
        <result property='telefono' column='telefono'/>
        <result property='tipo_documento' column='tipo_documento'/>
        
    </resultMap>
    
</mapper>
