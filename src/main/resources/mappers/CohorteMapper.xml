<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="proyecto.dao.mybatis.mappers.CohorteMapper"> 
  
    
    <select parameterType="String" id="consultarPeriodos"  resultMap="periodo">
        SELECT 
            co.periodo
        FROM cohorte as co
        GROUP BY co.periodo
        ORDER BY co.periodo;
    </select>
    
    <select parameterType="map" id="consultarPeriodo" resultMap="CohorteResult">
        
        SELECT
            co.id,
            co.fehca_inicio,
            co.fecha_fin,
            co.periodo
        FROM Cohorte as co WHERE co.periodo=#{periodo};
        
        
    </select>
    
    <resultMap type='Cohorte' id='CohorteResult'>
        <id property='id' column='id'/>
        <result property='fecha_inicio' column='fecha_inicio'/>
        <result property='fecha_fin' column='fecha_fin'/> 
        <result property='periodo' column='periodo'/> 
    </resultMap>
    
    <resultMap type="String" id="periodo">
    </resultMap>
    
</mapper>

